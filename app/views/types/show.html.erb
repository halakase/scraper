<h1> <%= @type.name %></h1>
<ul>
  <% @type.businesses.each do |business| %>
    <li> <%= link_to business.name, type_business_path(@type, business)%></li>
  <% end %>
</ul>
<p>
  <%= link_to "Return to Types", types_path %> |
  <%= link_to "Add Your Business", new_type_business_path(@type) %> |
  <%= link_to "Edit #{@type.name}", edit_type_path %> |
  <%= link_to "Delete #{@type.name}", type_path(@type),
                                      data: { confirm: "Are you sure you want to delete #{@type.name}?",
                                              method: "delete" } %>
</p>
